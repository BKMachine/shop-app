{
  "name": "server",
  "type": "module",
  "version": "1.0.0",
  "description": "Server for the Shop App",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch --clear-screen=false -r dotenv/config ./src/index.ts",
    "build": "rimraf ./dist && tsc",
    "lint": "eslint '**/*.{js,ts,jsx,tsx}' --ignore-pattern '__tests__' .",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "cron": "^4.3.2",
    "express": "^5.1.0",
    "http-terminator": "^3.2.0",
    "mongoose": "^8.16.4",
    "morgan": "^1.10.1",
    "nodemailer": "^7.0.5",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@repo/utilities": "workspace:*",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.16.5",
    "@types/nodemailer": "^6.4.17",
    "@types/shop-app": "workspace:*",
    "@types/uuid": "^10.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.6.1",
    "eslint": "^9.31.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
