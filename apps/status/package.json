{
  "name": "status",
  "type": "module",
  "version": "1.0.0",
  "description": "CNC Status service for the Shop App",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch --clear-screen=false -r dotenv/config ./src/index.ts",
    "build": "rimraf ./dist && tsc",
    "lint": "eslint '**/*.{js,ts,jsx,tsx}' --ignore-pattern '__tests__' .",
    "test": "jest",
    "performance:mqtt": "tsx -r dotenv/config ./src/__tests__/mqtt.messageHandler.performance.test.ts",
    "performance:mtconnect": "tsx -r dotenv/config ./src/__tests__/mtconnect.performance.test.ts"
  },
  "engineStrict": true,
  "dependencies": {
    "@elastic/elasticsearch": "8.10.0",
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "fast-xml-parser": "^5.2.3",
    "http-terminator": "^3.2.0",
    "lodash": "^4.17.21",
    "mongoose": "^8.14.3",
    "morgan": "^1.10.0",
    "mqtt": "^5.13.0",
    "remote-serial-port-client": "^0.4.0",
    "socket.io": "^4.8.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.16",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.15.18",
    "@types/shop-app": "workspace:*",
    "eslint": "^9.25.1",
    "jest": "^29.7.0",
    "performance-now": "^2.1.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.3",
    "tsx": "^4.19.4",
    "typescript": "~5.8.3"
  }
}
